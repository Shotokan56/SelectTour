@model IEnumerable<WebAPP.Areas.CMS.Models.Contact>

@{
    ViewBag.Title = "Trashed Contact";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Restore", "Restore", new {/* id=item.PrimaryKey */}) 
            </td>
        </tr>
    }

</table>

<div class="pull-right" style="padding-right: 10px">
    <div id="pager" class="pull-right">

    </div>
</div>

<script type="text/javascript">
    //Pager
    $(function () {
        var options = {
            currentPage: 1,
            totalPages: 10,
            onPageChanged: function (e, oldPage, newPage) {
                //LoadDataList(oldPage, newPage);
            }
        }
        $('#pager').bootstrapPaginator(options);
    });
</script>
