@model IEnumerable<WebAPP.Areas.CMS.Models.PackageTourViewModel>

@{
    ViewBag.Title = "TrashedSelectTours";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}
<div class="form-group headControl">
    <div class="col-md-5">
    </div>
    <label class="col-md-1 control-label">Search:</label>
    <div class="col-md-6">@Html.TextBox("Search", null, new {@class = "form-control"})</div>
</div>

<div class="form-group">
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageTourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageTourDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageTourDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageTourPrice)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageTourName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageTourDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageTourDestination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageTourPrice)
                </td>
                <td>
                    @Html.ActionLink("Restore", "Restore", new { id = item.PackageTourId })
                </td>
            </tr>
        }

    </table>
</div>