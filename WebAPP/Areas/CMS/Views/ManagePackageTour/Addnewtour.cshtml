@model WebAPP.Areas.CMS.Models.PackageTourViewModel

@{
    ViewBag.Title = "Addnewtour";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}

@using (Html.BeginForm("CreateAndEdit", "ManagePackageTour", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TourId)
    <div class="form-horizontal" style="width: 85%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class ="control-label col-md-2" >Tour Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TourName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TourName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tour Route</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TourRoute, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TourRoute, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
            <label class="control-label col-md-2">Activity Level</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.ActivityLevel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActivityLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tour Style</label>
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.TourStyle, new SelectList(Model.LstTourStyle, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TourStyle, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Special, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*@Html.EditorFor(model => model.Special, new { htmlAttributes = new { @class = "form-control" } })*@
                <select class="form-control list-box tri-state" id="Special" name="Special">
                    @*<option selected="selected" value="">Not Set</option>*@
                    <option value="true">Yes</option>
                    <option value="false" selected="selected">No</option>
                </select>
                @Html.ValidationMessageFor(model => model.Special, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Sort Description</label>
            <div class="col-md-10" style="height: auto;">
                @Html.EditorFor(model => model.SortDescription, new {@class = "form-control", rows = "3"})
                @Html.ValidationMessageFor(model => model.SortDescription, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Image</label>
            <div class="col-md-10" style="height: auto;">
                @Html.EditorFor(model => model.Image, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="height: auto;">
                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", rows = "8" })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
            </div>
        </div>



        @*=========================*@
        <h4 style="margin-top: 25px; ">Price for agencies:</h4>
        <div class="form-group">
            <label class="control-label col-md-2">TO Rate</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AgencyPrice1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AgencyPrice1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">TA Rate</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AgencyPrice2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AgencyPrice2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Public Rate</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GuestPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GuestPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Remove)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 pull-right">
                <div class="pull-right">
                    @*<input type="button" value="Cancel" class="btn btn-default" />*@
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>


