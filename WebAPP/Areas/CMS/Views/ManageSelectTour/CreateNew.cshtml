                    <td>@Html.EditorFor(model => model.AgencySuperior35, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.AgencySuperior69, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency1SingleSupplementDeluxe, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                </tbody>
            </table>
        </div>


        <h4 style="margin-top: 30px">Price for TA</h4>
        <br />

        <div class="form-group">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="">Hotel</th>
                    <th>2 people</th>
                    <th>3 -> 5 pepple</th>
                    <th>6 -> 9 pepple</th>
                    <th>Single Supplement</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Standard</td>
                    <td>@Html.EditorFor(model => model.Agency2Standard2, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2Standard35, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2Standard69, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2SingleSupplementStandard, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>Superor</td>
                    <td>@Html.EditorFor(model => model.Agency2Superior2, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2Superior35, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2Superior69, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency2SingleSupplementSuperior, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>Deluxe</td>
