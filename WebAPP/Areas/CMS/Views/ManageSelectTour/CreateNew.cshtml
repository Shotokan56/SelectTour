@model WebAPP.Areas.CMS.Models.SelectTourViewModel

@{
    ViewBag.Title = "CreateNew";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}

@using (Html.BeginForm("CreateAndEdit", "ManageSelectTour", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(o=>o.SelectTourId)
        <div class="form-group">
            <label class="control-label col-md-2">Tour Name</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.TourName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TourName, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Style, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.Style, new SelectList(Model.LstTourStyle, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Style, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Duration, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Duration, "", new {@class = "text-danger"})
            </div>
            @Html.LabelFor(model => model.Special, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*@Html.EditorFor(model => model.Special, new { htmlAttributes = new { @class = "form-control" } })*@
                <select class="form-control list-box tri-state" id="Special" name="Special">
                    @if (Model.Special == false)
                    {
                        <option value="true">Yes</option>
                        <option value="false" selected="selected">No</option>
                    }
                    else
                    {
                        <option value="true" selected="selected">Yes</option>
                        <option value="false">No</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Special, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tour Route</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TourRoute, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.TourRoute, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", @rows = "15" })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
            </div>
        </div>

        <h4 style="margin-top: 30px">Price for TO</h4>
        <br />

        <div class="form-group">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="">Hotel</th>
                    <th>2 people</th>
                    <th>3 -> 5 pepple</th>
                    <th>6 -> 9 pepple</th>
                    <th>Single Supplement</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>Standard</td>
                    <td>@Html.EditorFor(model => model.AgencyStandard2, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.AgencyStandard35, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.AgencyStandard69, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency1SingleSupplementStandard, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>Superor</td>
                    <td>@Html.EditorFor(model => model.AgencySuperior2, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.AgencySuperior35, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.AgencySuperior69, new {htmlAttributes = new {@class = "form-control"}})</td>
                    <td>@Html.EditorFor(model => model.Agency1SingleSupplementSuperior, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>Deluxe</td>
