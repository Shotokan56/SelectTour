                        <td>@Html.EditorFor(model => model.GuestSuperior35, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => model.GuestSuperior69, new {htmlAttributes = new {@class = "form-control"}})</td>
                        <td>@Html.EditorFor(model => model.GuestSingleSupplementSuperior, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>Deluxe</td>
                        <td>@Html.EditorFor(model => model.GuestDeluxe2, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => model.GuestDeluxe35, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => model.GuestDeluxe69, new {htmlAttributes = new {@class = "form-control"}})</td>
                        <td>@Html.EditorFor(model => model.GuestSingleSupplementDeluxe, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                </tbody>
            </table>
        </div>

        @Html.HiddenFor(model => model.Remove)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 pull-right">
                <div class="pull-right">
                    <input type="button" value="Cancel" class="btn btn-default" />
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

