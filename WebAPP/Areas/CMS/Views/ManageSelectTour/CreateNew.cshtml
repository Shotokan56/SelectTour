                </tr>
                </tbody>
            </table>
        </div>

        <h4 style="margin-top: 30px">Price for Guest</h4>
        <br />

        <div class="form-group">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="">Hotel</th>
                        <th>2 people</th>
                        <th>3 -> 5 pepple</th>
                        <th>6 -> 9 pepple</th>
                        <th>Single Supplement</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Standard</td>
                        <td>@Html.EditorFor(model => model.GuestStandard2, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => model.GuestStandard35, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.EditorFor(model => model.GuestStandard69, new {htmlAttributes = new {@class = "form-control"}})</td>
                        <td>@Html.EditorFor(model => model.GuestSingleSupplementStandard, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
