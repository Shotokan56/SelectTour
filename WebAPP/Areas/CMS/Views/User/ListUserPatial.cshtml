@model WebAPP.Areas.CMS.Models.UserListView

@Html.HiddenFor(o => o.TotalPage)
<table class="table table-bordered table-striped">
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Address
        </th>
        <th>
            Lock
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model.LstUser)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            @if (item.Lock != null && item.Lock == true)
            {
                <td>
                    Yes
                </td>
            }
            else
            {
                <td>
                    No
                </td>
            }
            <td>
                @if (item.Remove == true)
                {
                    @Html.ActionLink("Restore", "Restore", new { id = item.User_Id }, new { onclick = "return confirm('Are you sure to restore this item ?');" })
                }
                else
                {
                    @(Html.ActionLink("Edit", "Edit", new { id = item.User_Id })) @Html.Label(" | ")
                    @(Html.ActionLink("Delete", "Delete", new { id = item.User_Id }, new { onclick = "return confirm('Are you sure to delete this item ?');" }))
                }
            </td>
        </tr>
    }

</table>

