@model WebAPP.Models.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/GUI/Views/Shared/GuiLayOut.cshtml";
}
@using (Html.BeginForm("SaveContact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
<section class="content">
    <div class="caption" style="margin-top: 20px;">
        <span class="">Contact Us</span>
    </div>
    <div class="form-horizontal" style="margin-top: 20px;">
        <div class="form-group">
            <strong class="col-md-12">Information</strong>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Name:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBoxFor(o => o.Name)
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Phone:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBoxFor(o => o.Phone)
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Address:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBoxFor(o => o.Address)
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Email:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBoxFor(o => o.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-horizontal" style="margin-top: 20px;">
        <div class="form-group">
            <strong class="col-md-12">Message</strong>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Title:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBoxFor(o => o.Title)
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Content:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextAreaFor(model => model.Content, new { @style = "min-height: 100px;" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            <span class="col-md-2 " style="margin-bottom: 10px;">Security:</span>
            <div class="col-md-10" style="padding: 0px;">
                @Html.TextBox("Test")
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-12" style="padding: 0px;">
                <button type="submit" class="button pull-right" style="margin-left: 10px">Submit</button>
            </div>
        </div>
    </div>

    
</section>
}