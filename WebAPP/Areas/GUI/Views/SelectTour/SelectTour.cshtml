<div id="TotalReplace"></div>

<section class="layer1" style="margin-top: 20px;">
    <div class="caption">
        <span>
            Booking Information
        </span>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2">Full Name</label>

                <div class="col-md-4">
                    <input id="Name" type="text" class="form-control" />
                </div>

                <label class="control-label col-md-2">Gender</label>

                <div class="col-md-4">
                    <select id="gender">
                        <option value="Male">Male</option>
                        <option value="Famale">Famale</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Email</label>

                <div class="col-md-4">
                    <input id="Email" type="text" class="form-control" />
                </div>

                <label class="control-label col-md-2">Nationality</label>

                <div class="col-md-4">
                    @Html.DropDownList("Nationality", (List<SelectListItem>)@ViewBag.Nationality, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Address</label>

                <div class="col-md-4">
                    <input id="Address" type="text" class="form-control" />
                </div>

                <label class="control-label col-md-2">Phone</label>

                <div class="col-md-4">
                    <input id="Phone" type="text" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    @*<div class="row" style="padding-right: 14px; padding-top: 10px;">*@
                    <a class="button pull-right" style="margin-left: 10px" id="btPrint">Print</a>
                    <a class="button pull-right" id="btnBook">Book</a>
                    @*</div>*@

                </div>
            </div>
        </div>
        @Html.Hidden("selected")
        @Html.Hidden("TourId")
    }
</section>


<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery(".content").hide();
        //toggle the componenet with class msg_body
        jQuery(".heading").click(function () {
            jQuery(this).next(".content").slideToggle(500);
        });

        $("input[type=checkbox]").change(function () {
            if ($(this).attr("id") != "SingleSupplement")
            if ($(this).is(':checked'))// bỏ qua single
                $(this).parent().siblings().find("input:not(input[id=SingleSupplement])").attr("disabled", "disabled");
            else
                $(this).parent().siblings().find("input:not(input[id=SingleSupplement])").removeAttr("disabled");

            var selected = [];
            var tourId = "";
            $('.content input:checked:not(input[id=SingleSupplement])').each(function () {//loại bỏ single
                selected.push({
                    Level: $(this).attr('Level'),
                    People: $(this).attr('People'),
                    TourId: $(this).attr('TourId'),
                    TourName: $(this).attr('TourName'),
                    Price: $(this).attr('Price'),
                    SingleSupplement: $(this).parent().parent().find("input[id=SingleSupplement]").is(':checked')
                });
                tourId += $(this).attr('TourId') + ";";
            });
            $("#selected").val(JSON.stringify(selected));
            //alert($("#selected").val());
            $("#TourId").val(tourId);

            $.ajax({
                url: "GetTotalTable",
                type: "POST",
                data: {
                    tbString: $("#selected").val()
                },
                success: function (result) {
                    $("#TotalReplace").html(result);

                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(errorThrown);
                }
            });
        });

        $("#btnBook").on("click", function () {
            if ($("#Name").val() == "" || $("#Email").val() == "" || $("#Address").val() == "" || $("#Phone").val() == "" || $("#selected").val() == "") {
                alert("you must complete booking information");
                return;
            }

            $.ajax({
                url: "BookSelectTour",
                type: "POST",
                data: {
                    name: $("#Name").val(),
                    gender: $("#gender").val(),
                    email: $("#Email").val(),
                    nationality: $("#Nationality").val(),
                    address: $("#Address").val(),
                    phone: $("#Phone").val(),
                    selected: $("#selected").val()
                },
                success: function (result) {
                    $("#TotalReplace").html(result);

                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(errorThrown);
                }
            });
        });


        $("#btPrint").on("click", function () {
            if ($("#TourId").val() != "") {
                $.ajax({
                    url: "Print",
                    type: "POST",
                    data: {
                        tourId: $("#TourId").val()
                    },
                    success: function (result) {
                        var printWindow = window.open('', '', 'height=400,width=800');
                        printWindow.document.write(result);
                        printWindow.document.close();
                        printWindow.print();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
            }
        });
    });
</script>