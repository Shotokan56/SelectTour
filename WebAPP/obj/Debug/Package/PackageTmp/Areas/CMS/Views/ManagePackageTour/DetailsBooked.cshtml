@model WebAPP.Areas.CMS.Models.BookedEnquiryDetailViewModel
@{
    ViewBag.Title = "Package Tour Enquire";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}
<head>
    @Styles.Render("~/bundles/BootstrapDatetimeStyle")
    @Scripts.Render("~/bundles/BootstrapDatetimeJs")
</head>

<section class="">
        
        <article class="post">
            <h3 class="attribute" style="color: #ffbf00">Your tour information</h3>

            <div class="form-horizontal">
                <div class="form-group" style="margin-bottom: 5px;">
                    <span class="col-md-2 " style="font-weight: bold">Tour Name:</span>
                    <span class="">@Model.PackageTour.TourName</span>
                </div>

                <div class="form-group" style="margin-bottom: 5px;">
                    <span class="col-md-2"  style="font-weight: bold">Tour Duration:</span>
                    <span class="control-label">@Model.PackageTour.Duration</span>
                </div>

                <div class="form-group" style="margin-bottom: 5px;">
                    <span class="col-md-2 "  style="font-weight: bold">Tour Roules:</span>
                    <span class="control-label">@Model.PackageTour.TourRoute</span>
                </div>
            </div>


            <div class="form-horizontal" style="margin-top: 20px;">
                <div class="form-group">
                    <span class="col-md-2 "  style="font-weight: bold">Departure Date:</span>
                    <div class="col-md-3" style="padding: 0px;">
                        @if(Model.ObjEnquiry.DepartureDate != null)
                        {
                            Model.ObjEnquiry.DepartureDate.Value.ToString("dd/MM/yyyy");
                        }
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 "  style="font-weight: bold">Tour Class:</span>
                    <div class="col-md-3" style="padding: 0px;">@Model.ObjEnquiry.TourClassName</div>
                </div>

                <div class="form-group">
                    <span class="col-md-12 " style="margin-bottom: 10px; font-weight: bold">Number Of Travel Partners (include your self):</span>
                    <div class="col-md-1">Adults</div>
                    <div class="col-md-1" style="margin-right: 20px;">@Model.ObjEnquiry.Adults</div>
                    <div class="col-md-2">Baby 0-2 yrs</div>
                    <div class="col-md-1" style="margin-right: 20px;">@Model.ObjEnquiry.Baby0_2</div>
                    <div class="col-md-2">Child 2-11 yrs</div>
                    <div class="col-md-1" style="margin-right: 20px;">@Model.ObjEnquiry.Child2_11</div>
                    <div class="col-md-1">Seniors</div>
                    <div class="col-md-1" style="margin-right: 20px;">@Model.ObjEnquiry.Seniors</div>
                </div>
            </div>


            <div class="form-horizontal" style="margin-top: 20px;">
                <div class="form-group">
                    <span class="col-md-2 " style="font-weight: bold">Billing Options:</span>
                    <div class="col-md-10" style="padding: 0px;">
                       @Model.ObjEnquiry.BillingOptions
                    </div>
                </div>
            </div>


            <div class="form-horizontal" style="margin-top: 20px;">
                <div class="form-group">
                    <span class="col-md-12 " style="margin-bottom: 10px;font-weight: bold">What additional plans or ideas do you have for your itinerary?</span>
                    <div class="col-md-12" style="">
                        @Model.ObjEnquiry.AdditionalPlans
                    </div>
                </div>
            </div>

            <div class="form-horizontal" style="margin-top: 20px;">
                <div class="form-group">
                    <span class="col-md-12 " style="margin-bottom: 10px;font-weight: bold">Where did you hear about us?</span>
                    <div class="col-md-12" style="">
                        @Model.ObjEnquiry.WhereHear
                    </div>
                </div>
            </div>
        </article>

        <article class="post">
            <h3 class="attribute" style="color: #ffbf00">Contact information</h3>

            <div class="form-horizontal" style="margin-top: 20px;">
                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">Full Name:</span>
                    <div class="col-md-8" style="padding: 0px;">
                        @Model.ObjEnquiry.FullName
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="font-weight: bold">Billing Options:</span>
                    <div class="col-md-1" style="padding: 0px;">
                        @Model.ObjEnquiry.Gender
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="font-weight: bold">Date Of Birth:</span>
                    <div class="col-md-3" style="padding: 0px;">
                            @Model.ObjEnquiry.DateOfBirth.ToString("dd/MM/yyyy")
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">Address:</span>
                    <div class="col-md-8" style="padding: 0px;">
                        @Model.ObjEnquiry.Address
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">City:</span>
                    <div class="col-md-8" style="padding: 0px;">
                        @Model.ObjEnquiry.City
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">Country:</span>
                    <div class="col-md-3" style="padding: 0px;">
                        @Model.ObjEnquiry.Country
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">Email:</span>
                    <div class="col-md-8" style="padding: 0px;">
                        @Model.ObjEnquiry.Email
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;font-weight: bold">Phone:</span>
                    <div class="col-md-8" style="padding: 0px;">
                        @Model.ObjEnquiry.Phone
                    </div>
                </div>

                <div class="form-group">
                    <span class="col-md-2 " style="margin-bottom: 10px;"></span>
                    <div class="col-md-8" style="padding: 0px;">
                        @*<input type="submit" value="Save" class="button pull-right"/>*@
                        @Html.ActionLink("Remove","Remove", new { id = @Model.ObjEnquiry.BookId }, new {@class = "button pull-right" })
                    </div>
                </div>
            </div>
        </article>
    </section>


