@model IEnumerable<WebAPP.Areas.CMS.Models.AgencyListViewModel>

@{
    ViewBag.Title = "AllAgencies";
    Layout = "~/Areas/CMS/Views/Shared/_Layout_CMS.cshtml";
}

<div class="form-group headControl">
    <div class="col-md-5">
        @Html.ActionLink("Add New", "AddNew", "Agencies", null, new { @class = "btn btn-default", @datamodal = "" })
    </div>
    <label class="col-md-2 control-label">Search:</label>
    <div class="col-md-5">@Html.TextBox("Search")</div>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th style="width: 40%">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="width: 40%">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
            </td>
        </tr>
    }

</table>

<div class="pull-right" style="padding-right: 10px">
    <div id="pager" class="pull-right">

    </div>
</div>

<script type="text/javascript">
    //Pager
    $(function () {
        var options = {
            currentPage: 1,
            totalPages: 10,
            onPageChanged: function (e, oldPage, newPage) {
                //LoadDataList(oldPage, newPage);
            }
        }
        $('#pager').bootstrapPaginator(options);
    });
</script>
