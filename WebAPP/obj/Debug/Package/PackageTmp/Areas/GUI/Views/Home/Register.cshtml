@model WebAPP.Areas.CMS.Models.UserEditView

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/GUI/Views/Shared/GuiLayOut.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
